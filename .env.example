# Application
NODE_ENV=development
PORT=3000
APP_NAME=BookSwap Community

# Database
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=bookswap_user
DB_PASSWORD=bookswap_pass
DB_DATABASE=bookswap_db
DB_SYNCHRONIZE=false

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRATION=30d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# Google Books API
GOOGLE_BOOKS_API_KEY=your-google-books-api-key

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# AWS S3 (for file uploads)
AWS_S3_BUCKET=bookswap-uploads
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=ap-southeast-1

# Email (SendGrid/Mailgun)
EMAIL_FROM=noreply@bookswap.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email
EMAIL_PASSWORD=your-password

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Swagger
SWAGGER_TITLE=BookSwap API
SWAGGER_DESCRIPTION=API documentation for BookSwap Community
SWAGGER_VERSION=1.0